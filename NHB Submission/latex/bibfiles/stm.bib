@article{liu2020framing,
  title = {Framing a Mega-Disaster: {{Political}} Rhetoric and the {{Wenchuan}} Earthquake},
  shorttitle = {Framing a Mega-Disaster},
  author = {Liu, Yihong and Boin, Arjen},
  year = {2020},
