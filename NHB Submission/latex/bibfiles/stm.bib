@article{kamins1987twosided,
  title = {Two-{{Sided}} versus {{One-Sided Appeals}}: {{A Cognitive Perspective}} on {{Argumentation}}, {{Source Derogation}}, and the {{Effect}} of {{Disconfirming Trial}} on {{Belief Change}}},
  shorttitle = {Two-{{Sided}} versus {{One-Sided Appeals}}},
